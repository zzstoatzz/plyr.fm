{
  "lexicon": 1,
  "id": "fm.plyr.like",
  "defs": {
    "main": {
      "type": "record",
      "description": "A like on a plyr.fm track.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "createdAt"],
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Reference to the track being liked (uri + cid)."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when the like was created."
          }
        }
      }
    }
  }
}
