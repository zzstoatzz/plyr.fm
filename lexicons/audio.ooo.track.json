{
  "lexicon": 1,
  "id": "audio.ooo.track",
  "defs": {
    "main": {
      "type": "record",
      "description": "An audio track. Shared schema for audio content on ATProto. See https://ooo.audio",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["title", "uri", "mimeType", "createdAt"],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the track.",
            "maxGraphemes": 128
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "description": "URI to the audio file."
          },
          "mimeType": {
            "type": "string",
            "description": "MIME type (e.g., audio/mpeg, audio/flac)."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when published."
          },
          "duration": {
            "type": "integer",
            "description": "Duration in milliseconds.",
            "minimum": 0
          },
          "artwork": {
            "type": "blob",
            "description": "Cover art image.",
            "accept": ["image/*"],
            "maxSize": 1000000
          },
          "description": {
            "type": "string",
            "description": "Description or notes about the track.",
            "maxGraphemes": 300
          }
        }
      }
    }
  }
}
